<div class="body">
    <div class="container">
        <h3 class="heading">Products</h3>
        <div class="result"></div>
    </div>
    <div class="cart">
        <div class="coupon">
            <p>Have coupon?</p>
            <input type="text" class="input-coupon" id="input-coupon" placeholder="Coupon code">
            <button class="apply-btn" id="apply-btn" onclick="applyCoupon()">APPLY</button>
        </div>
        <div class="cart-header">
            <h3>CART</h3>
            <p class="noOfItems">0 items</p>
        </div>
        <hr/>
        <div class="cart-items"></div>
        <hr/>
        <div class="cart-footer cart-header">
            <h4>Total</h4>
            <p class="total">$0</p>
        </div>
        <button class="buy-btn">PROCEED TO BUY</button>
    </div>
</div>

<script>
    import "../scripts/cart.js";
</script>